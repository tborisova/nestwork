<%# Partial for displaying designer/client badges %>
<%# locals: users (collection), type (:designer or :client) %>

<% if users.any? %>
  <div class="flex flex-wrap gap-1.5 justify-end">
    <% users.each do |user| %>
      <% if type == :designer %>
        <span class="inline-flex items-center gap-1.5 rounded-full bg-violet-500/20 border border-violet-400/30 px-2.5 py-1 text-xs text-violet-200">
          <span class="w-1.5 h-1.5 rounded-full bg-violet-400"></span>
          <%= user.name %>
        </span>
      <% else %>
        <span class="inline-flex items-center gap-1.5 rounded-full bg-pink-500/20 border border-pink-400/30 px-2.5 py-1 text-xs text-pink-200">
          <span class="w-1.5 h-1.5 rounded-full bg-pink-400"></span>
          <%= user.name %>
        </span>
      <% end %>
    <% end %>
  </div>
<% else %>
  <span class="text-white/30 text-sm">None assigned</span>
<% end %>
