<% content_for :title, @project.name %>
<% content_for :back_path, projects_path %>

<div class="container mx-auto px-4 py-6" data-controller="comments-panel" data-comments-panel-project-id-value="<%= @project.id %>" data-action="tabs:openCommentsPanel->comments-panel#open">
  <div class="rounded-lg border border-white/10 bg-white/5 p-4 mb-4">
    <div class="flex items-start justify-between gap-4">
      <div class="flex-1 min-w-0" data-controller="inline-edit">
        <%# Display mode %>
        <div data-inline-edit-target="display" class="flex items-center gap-2">
          <h1 class="text-xl font-semibold text-white break-words"><%= @project.name %></h1>
          <% if @is_designer %>
            <button type="button" data-action="click->inline-edit#edit" class="p-1 rounded hover:bg-white/10 text-white/40 hover:text-white" title="Edit title">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
              </svg>
            </button>
          <% end %>
        </div>
        <%# Edit mode %>
        <%= form_with model: @project, method: :patch, class: "hidden", data: { inline_edit_target: "form" } do |f| %>
          <div class="flex items-center gap-2">
            <%= f.text_field :name, value: @project.name, class: "flex-1 px-3 py-1.5 rounded-lg bg-white/10 border border-white/20 text-white text-xl font-semibold focus:outline-none focus:ring-2 focus:ring-fuchsia-400", data: { inline_edit_target: "input", action: "keydown->inline-edit#submitOnEnter" } %>
            <button type="submit" class="p-1.5 rounded bg-emerald-700 hover:bg-emerald-600 text-white" title="Save">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </button>
            <button type="button" data-action="click->inline-edit#cancel" class="p-1.5 rounded bg-white/10 hover:bg-white/20 text-white" title="Cancel">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
        <% end %>
        <% status_label =
          case @project.status.to_s
          when "new" then "New"
          when "in_progress", "in_progess" then "In progress"
          when "waiting_for_approval" then "Waiting for approval"
          when "done" then "Done"
          else @project.status.to_s.humanize
          end %>
        <% status_bg =
          case @project.status.to_s
          when "new" then "#38bdf8" # sky-400
          when "in_progress", "in_progess" then "#f59e0b" # amber-500
          when "waiting_for_approval" then "#f97316" # orange-500
          when "done" then "#10b981" # emerald-500
          else "#94a3b8" # slate-400
          end %>
        <div class="mt-2 flex items-center gap-3">
          <span class="inline-flex items-center rounded-md px-2 py-0.5 text-xs font-medium border border-white/10" style="background-color: <%= status_bg %>; color: #ffffff;"><%= status_label %></span>
          <% if @project_total > 0 %>
            <span class="text-white/70 text-sm">Total: <span class="text-white font-semibold">$<%= number_with_delimiter(@project_total) %></span></span>
          <% end %>
        </div>
      </div>
      <div class="text-right w-64 shrink-0">
        <div class="mb-2">
          <div class="text-white/70 text-xs uppercase tracking-wide mb-1">Designers</div>
          <% if @project.designers.any? %>
            <div class="flex flex-wrap gap-1 justify-end">
              <% @project.designers.each do |designer| %>
                <span class="inline-flex items-center rounded-md bg-white/10 border border-white/10 px-2 py-0.5 text-xs text-white/90"><%= designer.name %></span>
              <% end %>
            </div>
          <% else %>
            <div class="text-white/60 text-xs">None</div>
          <% end %>
        </div>
        <div>
          <div class="text-white/70 text-xs uppercase tracking-wide mb-1">Clients</div>
          <% if @project.clients.any? %>
            <div class="flex flex-wrap gap-1 justify-end">
              <% @project.clients.each do |client| %>
                <span class="inline-flex items-center rounded-md bg-white/10 border border-white/10 px-2 py-0.5 text-xs text-white/90"><%= client.name %></span>
              <% end %>
            </div>
          <% else %>
            <div class="text-white/60 text-xs">None</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="rounded-lg border border-white/10 bg-white/5 p-2" data-controller="tabs" data-tabs-project-id-value="<%= @project.id %>" data-tabs-rooms-value="<%= @rooms_data.to_json %>" data-tabs-is-designer-value="<%= @is_designer %>">
    <div class="flex items-center gap-2 border-b border-white/10 pb-2">
      <% @rooms_data.each_with_index do |room, idx| %>
        <button type="button"
                class="px-3 py-1.5 rounded-md text-sm border border-white/10"
                data-tabs-target="tab"
                data-action="click->tabs#select"
                data-room="<%= room[:name] %>"
                data-active="<%= (idx == 0).to_s %>"><%= room[:name] %></button>
      <% end %>
      <% if @is_designer %>
        <span class="ml-auto">
          <a href="#" class="px-3 py-1.5 rounded-md text-sm bg-purple-950 hover:bg-purple-900 text-white border border-white/10">Add new room</a>
        </span>
      <% end %>
    </div>
    <div class="p-3 text-white/80 text-sm" data-tabs-target="content"></div>
  </div>

  <%# Comments slide-out panel %>
  <div data-comments-panel-target="panel" class="fixed inset-y-0 right-0 w-96 max-w-full bg-slate-900 border-l border-white/10 shadow-xl transform translate-x-full transition-transform duration-300 ease-in-out z-50 flex flex-col">
    <div class="flex items-center justify-between p-4 border-b border-white/10">
      <h3 class="text-white font-medium truncate" data-comments-panel-target="title">Comments</h3>
      <button type="button" class="p-1 rounded hover:bg-white/10 text-white/60 hover:text-white" data-action="click->comments-panel#close">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
    <div class="flex-1 overflow-y-auto p-4 space-y-3" data-comments-panel-target="list">
    </div>
    <form class="p-4 border-t border-white/10" data-comments-panel-target="form" data-action="submit->comments-panel#submitComment">
      <div class="flex gap-2">
        <input type="text" placeholder="Add a comment..." data-comments-panel-target="input" class="flex-1 px-3 py-2 rounded-lg bg-white/10 border border-white/20 placeholder-white/40 text-white text-sm focus:outline-none focus:ring-2 focus:ring-fuchsia-400">
        <button type="submit" class="px-4 py-2 rounded-lg bg-fuchsia-700 hover:bg-fuchsia-600 text-white text-sm border border-white/10">Post</button>
      </div>
    </form>
  </div>
</div>
