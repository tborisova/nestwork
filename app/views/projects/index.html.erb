<% content_for :title, "Projects" %>

<div class="py-10">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-display font-bold gradient-text">Projects</h1>
      <p class="text-white/50 mt-1"><%= @projects.size %> <%= "project".pluralize(@projects.size) %></p>
    </div>
    <% if @is_designer %>
      <%= link_to new_project_path, class: "btn-primary px-5 py-3 rounded-xl text-white font-medium inline-flex items-center gap-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        New Project
      <% end %>
    <% end %>
  </div>

  <div class="glass-card rounded-2xl p-5 mb-8">
    <%= form_with url: projects_path, method: :get, local: true do %>
      <div class="grid grid-cols-1 md:grid-cols-2 <%= @is_designer ? 'lg:grid-cols-4' : '' %> gap-4">
        <div>
          <label class="block mb-2 text-sm font-medium text-white/70">Search</label>
          <%= text_field_tag :name, params[:name], placeholder: "Project name...", class: "input-field w-full px-4 py-3 rounded-xl text-white placeholder-white/30 focus:outline-none" %>
        </div>
        <div>
          <label class="block mb-2 text-sm font-medium text-white/70">Status</label>
          <% statuses = [["New","new"],["In progress","in_progress"],["Waiting for approval","waiting_for_approval"],["Done","done"]] %>
          <%= select_tag :status, options_for_select([["All statuses",""]] + statuses, params[:status]), class: "input-field w-full px-4 py-3 rounded-xl text-white focus:outline-none cursor-pointer" %>
        </div>
        <% if @is_designer %>
          <div>
            <label class="block mb-2 text-sm font-medium text-white/70">Designers</label>
            <%= select_tag "designer_ids[]",
                  options_from_collection_for_select(@filter_designers, :id, :name, Array(params[:designer_ids])),
                  multiple: true,
                  include_blank: false,
                  class: "input-field w-full px-4 py-2 rounded-xl text-white focus:outline-none",
                  size: 3 %>
          </div>
          <div>
            <label class="block mb-2 text-sm font-medium text-white/70">Clients</label>
            <%= select_tag "client_ids[]",
                  options_from_collection_for_select(@filter_clients, :id, :name, Array(params[:client_ids])),
                  multiple: true,
                  include_blank: false,
                  class: "input-field w-full px-4 py-2 rounded-xl text-white focus:outline-none",
                  size: 3 %>
          </div>
        <% end %>
      </div>
      <div class="mt-5 flex items-center gap-3">
        <%= submit_tag "Apply Filters", class: "btn-primary px-5 py-2.5 rounded-xl text-white font-medium cursor-pointer" %>
        <%= link_to "Reset", projects_path, class: "btn-secondary px-5 py-2.5 rounded-xl text-white/80 font-medium" %>
      </div>
    <% end %>
  </div>

  <% if @projects.any? %>
    <div class="grid gap-4">
      <% @projects.each do |project| %>
        <%= link_to project_path(project), class: "glass-card glass-card-hover rounded-2xl p-5 block transition-all duration-200" do %>
          <div class="flex items-start justify-between gap-4">
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-3 mb-2">
                <h2 class="text-lg font-semibold text-white truncate"><%= project.name %></h2>
                <% status_class =
                  case project.status.to_s
                  when "new" then "badge-new"
                  when "in_progress", "in_progess" then "badge-progress"
                  when "waiting_for_approval" then "badge-waiting"
                  when "done" then "badge-done"
                  else "bg-white/20"
                  end %>
                <% status_label =
                  case project.status.to_s
                  when "new" then "New"
                  when "in_progress", "in_progess" then "In Progress"
                  when "waiting_for_approval" then "Waiting"
                  when "done" then "Done"
                  else project.status.to_s.humanize
                  end %>
                <span class="badge text-white <%= status_class %>"><%= status_label %></span>
              </div>
              <% unless @is_designer %>
                <p class="text-white/50 text-sm"><%= project.firm.name %></p>
              <% end %>
            </div>

            <div class="flex gap-6 shrink-0">
              <div class="text-right">
                <p class="text-white/40 text-xs uppercase tracking-wider mb-2">Designers</p>
                <% if project.designers.any? %>
                  <div class="flex flex-wrap gap-1.5 justify-end">
                    <% project.designers.each do |designer| %>
                      <span class="inline-flex items-center gap-1.5 rounded-full bg-violet-500/20 border border-violet-400/30 px-2.5 py-1 text-xs text-violet-200">
                        <span class="w-1.5 h-1.5 rounded-full bg-violet-400"></span>
                        <%= designer.name %>
                      </span>
                    <% end %>
                  </div>
                <% else %>
                  <span class="text-white/30 text-sm">None assigned</span>
                <% end %>
              </div>

              <div class="text-right">
                <p class="text-white/40 text-xs uppercase tracking-wider mb-2">Clients</p>
                <% if project.clients.any? %>
                  <div class="flex flex-wrap gap-1.5 justify-end">
                    <% project.clients.each do |client| %>
                      <span class="inline-flex items-center gap-1.5 rounded-full bg-pink-500/20 border border-pink-400/30 px-2.5 py-1 text-xs text-pink-200">
                        <span class="w-1.5 h-1.5 rounded-full bg-pink-400"></span>
                        <%= client.name %>
                      </span>
                    <% end %>
                  </div>
                <% else %>
                  <span class="text-white/30 text-sm">None assigned</span>
                <% end %>
              </div>

              <div class="flex items-center pl-4 border-l border-white/10">
                <svg class="w-5 h-5 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="glass-card rounded-2xl p-12 text-center">
      <div class="w-16 h-16 rounded-2xl bg-white/5 flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-white mb-2">No projects yet</h3>
      <p class="text-white/50 mb-6">Get started by creating your first project</p>
      <% if @is_designer %>
        <%= link_to new_project_path, class: "btn-primary px-6 py-3 rounded-xl text-white font-medium inline-flex items-center gap-2" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Create Project
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
