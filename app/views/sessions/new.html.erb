<% content_for :title, "Sign in" %>

<div class="min-h-screen flex items-center justify-center px-4 py-12">
  <% if current_user %>
    <div class="glass-card rounded-3xl p-10 max-w-md w-full text-center">
      <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-emerald-400 to-cyan-500 flex items-center justify-center mx-auto mb-6">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
      </div>
      <p class="text-white/50 text-sm uppercase tracking-wider mb-2">Welcome back</p>
      <h1 class="text-2xl font-semibold text-white mb-2">You're signed in</h1>
      <p class="text-white/70 mb-8"><%= current_user.email %></p>
      <%= button_to "Sign out", session_path, method: :delete, class: "btn-secondary px-6 py-3 rounded-xl text-white font-medium" %>
    </div>
  <% else %>
    <div class="w-full max-w-md">
      <div class="text-center mb-10">
        <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center mx-auto mb-6 shadow-lg shadow-purple-500/25">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
        </div>
        <h1 class="text-4xl font-display font-bold text-white mb-2">Nestwork</h1>
        <p class="text-white/50">Sign in to manage your design projects</p>
      </div>

      <div class="glass-card rounded-3xl p-8">
        <%= form_with url: session_path, method: :post, local: true do |f| %>
          <div class="mb-5">
            <label for="email" class="block mb-2 text-sm font-medium text-white/80">Email address</label>
            <%= email_field_tag :email, params[:email], required: true, autofocus: true, autocomplete: "email", placeholder: "you@example.com", class: "input-field w-full px-4 py-3.5 rounded-xl text-white placeholder-white/30 focus:outline-none" %>
          </div>
          <div class="mb-8">
            <label for="password" class="block mb-2 text-sm font-medium text-white/80">Password</label>
            <%= password_field_tag :password, nil, required: true, autocomplete: "current-password", placeholder: "Enter your password", class: "input-field w-full px-4 py-3.5 rounded-xl text-white placeholder-white/30 focus:outline-none" %>
          </div>
          <div>
            <%= submit_tag "Sign in", class: "btn-primary w-full py-4 rounded-xl text-white font-semibold cursor-pointer" %>
          </div>
        <% end %>
      </div>

      <p class="text-center text-white/30 text-sm mt-8">Interior design project management</p>
    </div>
  <% end %>
</div>
